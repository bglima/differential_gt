<launch>
  <!-- Lunch differential_gt node -->
  <node name="c_differential_gt" pkg="differential_gt" type="cgt_ros_node" respawn="false" 
    args="" output="screen" />

  <!-- Plot controller's state -->
  <node name="coop_controller_state" pkg="rqt_multiplot" type="rqt_multiplot" respawn="false" 
    args="--multiplot-config $(find differential_gt)/config/coop_controller_state_multiplot.xml --multiplot-run-all " />
  <!-- Plot Gazebo's estimated forces -->  
  <node name="estimated_forces" pkg="rqt_multiplot" type="rqt_multiplot" respawn="false" 
    args="--multiplot-config $(find differential_gt)/config/estimated_forces_multiplot.xml --multiplot-run-all " />
  <!-- Plot Gazebo's state_pose -->  
  <node name="joints_states_velocities_efforts" pkg="rqt_multiplot" type="rqt_multiplot" respawn="false" 
    args="--multiplot-config $(find differential_gt)/config/joints_states_velocities_efforts_multiplot.xml --multiplot-run-all " />


</launch>
